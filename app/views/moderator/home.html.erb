<div class="model-wrapper">
  <div class="model-wrapper__label">Your account</div>
  <div class="model-wrapper__model-group">
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Nickname: </div>
        <div class="model-info-wrapper__info"><%= current_account.account_user.nickname %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Email: </div>
        <div class="model-info-wrapper__info"><%= current_account.email %></div>
      </div>
    </div>
  </div>
  <div class="model-wrapper__label">Your employer information</div>
  <div class="model-wrapper__model-group">
    <div class="model-wrapper__model-info-block">
      <%= image_tag(current_account.account_user.employer.logo_url, size: "200x200", alt: "Logo load failed") %>
    </div>
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Name: </div>
        <div class="model-info-wrapper__info"><%= current_account.account_user.employer.label %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Address: </div>
        <div class="model-info-wrapper__info"><%= current_account.account_user.employer.address %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Phone:</div>
        <div class="model-info-wrapper__info"><%= current_account.account_user.employer.phone %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Public email:</div>
        <div class="model-info-wrapper__info"><%= current_account.account_user.employer.public_email %></div>
      </div>
    </div>
  </div>
</div>