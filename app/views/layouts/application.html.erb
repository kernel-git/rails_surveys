<!DOCTYPE html>
<html>
  <head>
    <title>Surveys Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "page_global" %>
    <%= javascript_pack_tag "application" %>
  </head>

  <body>
    <div class="wrapper">
      <% if current_account.present? %>
        <% if current_account.admin? %>
          <%= render 'layouts/admin_header' %>
        <% elsif current_account.moderator? %>
          <%= render 'layouts/moderator_header' %>
        <% elsif current_account.employee? %>
          <%= render 'layouts/employee_header' %>
        <% end %>
      <% else %>
        <%= render 'layouts/unauthorized_header' %>
      <% end %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="content">
        <%= yield %>
      </div>
      <div class="footer">
        <div class="footer__text font-small">
          site design / logo Â© 2020 boss078, Inc.
        </div>
      </div>
    </div>  
  </body>
</html>
