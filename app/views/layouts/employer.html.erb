<!DOCTYPE html>
<html>
  <head>
    <title>Surveys Project: Employer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "page_global" %>
  </head>

  <body>
    <div class="wrapper">
      <div class="header">
        <%= link_to "Employer", employer_root_url, class: "header__label font-large" %>
        <div class="header__sections header-sections">
          <%= link_to "Surveys", employer_surveys_url, class: "header-sections__section font-big" %>
          <%= link_to "Results", employer_results_url, class: "header-sections__section font-big" %>
          <%= link_to "Employees", employer_employees_url, class: "header-sections__section font-big" %>
          <%= link_to "Groups", employer_groups_url, class: "header-sections__section font-big" %>
        </div>
        <div class="header__buttons header-buttons">
          <%= button_to "Logout", destroy_account_session_url, method: :delete, class: "header-buttons__button font-medium" %>
        </div>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="content">
        <%= yield %>
      </div>
      <div class="footer">
        <div class="footer__text font-small">
          site design / logo Â© 2020 boss078, Inc.
        </div>
      </div>
    </div>  
  </body>
</html>
