<%= javascript_pack_tag "extra/table-behavior.js" %>

<div class="model-wrapper">
  <div class="model-wrapper__label-wrapper">
    <div class="model-wrapper__label">Employee information</div>
    <div class="model-wrapper__button-group">
      <%= button_to "Edit", edit_admin_employee_url(@employee), method: :get, class: 'link-button' %>
      <%= button_to "Delete", admin_employee_url(@employee), method: :delete, data: {confirm: "Are you sure?(All associated answers will be deleted too)"}, class: 'link-button' %>
    </div>
  </div>
  <div class="model-wrapper__model-group">
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">First name: </div>
        <div class="model-info-wrapper__info"><%= @employee.first_name %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Last name:</div>
        <div class="model-info-wrapper__info"><%= @employee.last_name %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Age:</div>
        <div class="model-info-wrapper__info"><%= @employee.age %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Email:</div>
        <div class="model-info-wrapper__info"><%= @employee.account.email %></div>
      </div>
    </div>
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Account type: </div>
        <div class="model-info-wrapper__info"><%= @employee.account_type %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Position age:</div>
        <div class="model-info-wrapper__info"><%= @employee.position_age %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper">
        <div class="model-info-wrapper__label">Is unsubscribed from new surveys:</div>
        <div class="model-info-wrapper__info"><%= @employee.opt_out %></div>
      </div>
    </div>
  </div>
  <div class="model-wrapper__model-table-wrapper model-table-wrapper">
    <div class="model-table-wrapper__label">Employee's employer</div>
    <div class="model-table-wrapper__table custom-table">
      <div class="custom-table__table-header-wrapper table-header-wrapper">
        <div class="table-header-wrapper__table-header-element table-header-element w-10">
          <div class="table-header-element__label">
            Logo
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__label">
            Name
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__label">
            Email
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__label">
            Phone
          </div>
        </div>
      </div>
      <%= link_to(admin_employer_url(@employee.employer), class: "custom-table__table-row-wrapper table-row-wrapper link-div") do %>
        <div class="table-row-wrapper__information w-10">
          <%= image_tag(@employee.employer.logo_url, size: "75x75") %>
        </div>
        <div class="table-row-wrapper__information">
          <%= @employee.employer.label %>
        </div>
        <div class="table-row-wrapper__information">
          <%= @employee.employer.public_email %>
        </div>
        <div class="table-row-wrapper__information">
          <%= @employee.employer.phone %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="model-wrapper__model-table-wrapper model-table-wrapper">
    <div class="model-table-wrapper__label">Employee's groups</div>
    <div id="listing-table_0" class="model-table-wrapper__table custom-table">
      <div class="custom-table__table-header-wrapper table-header-wrapper">
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_0_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_0_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Name
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_1_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_1_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Date of creation
          </div>
        </div>
      </div>
      <% unless @employee.groups.empty? %>
        <% @employee.groups.each do |group| %>
          <%= link_to(admin_group_url(group), class: "custom-table__table-row-wrapper table-row-wrapper link-div table-row_0") do %>
            <div class="table-row-wrapper__information">
              <%= group.label %>
            </div>
            <div class="table-row-wrapper__information">
              <%= group.created_at.to_formatted_s(:db) %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="custom-table__message">Empty</div>
      <% end %>
    </div>
  </div>
  <div class="model-wrapper__model-table-wrapper model-table-wrapper">
    <div class="model-table-wrapper__label">Employees's results</div>
    <div id="listing-table_1" class="model-table-wrapper__table custom-table">
      <div class="custom-table__table-header-wrapper table-header-wrapper">
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_0_table_1"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_0_table_1"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Survey
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_1_table_1"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_1_table_1"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Date of completion
          </div>
        </div>
      </div>
      <% unless @results.empty? %>
        <% @results.each do |result| %>
          <%= link_to(admin_result_url(result), class: "custom-table__table-row-wrapper table-row-wrapper link-div table-row_1") do %>
            <div class="table-row-wrapper__information">
              <%= result.survey.label %>
            </div>
            <div class="table-row-wrapper__information">
              <%= result.updated_at.to_formatted_s(:db) %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="custom-table__message">Empty</div>
      <% end %>
    </div>
  </div>
  
</div>
