<%= javascript_pack_tag "extra/table-behavior.js" %>

<div class="listing-wrapper">
  <div class="listing-wrapper__label-wrapper">
    <div class="label-wrapper__label">Company's listing</div>
    <%= link_to "Add new company", new_admin_client_url, class: "link-button label-wrapper__button" %>
  </div>
  <div id="listing-table_0" class="listing-wrapper__custom-table custom-table">
    <div class="custom-table__table-header-wrapper table-header-wrapper">
      <div class="table-header-wrapper__table-header-element table-header-element w-10">
        <div class="table-header-element__label">
          Logo
        </div>
      </div>
      <div class="table-header-wrapper__table-header-element table-header-element">
        <div class="table-header-element__arrows-wrapper arrows-wrapper">
          <div id="sort-arrow_up_1_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
          <div id="sort-arrow_down_1_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
        </div>
        <div class="table-header-element__label">
          Label
        </div>
      </div>
      <div class="table-header-wrapper__table-header-element table-header-element">
        <div class="table-header-element__arrows-wrapper arrows-wrapper">
          <div id="sort-arrow_up_2_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
          <div id="sort-arrow_down_2_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
        </div>
        <div class="table-header-element__label">
          Email
        </div>
      </div>
      <div class="table-header-wrapper__table-header-element table-header-element">
        <div class="table-header-element__arrows-wrapper arrows-wrapper">
          <div id="sort-arrow_up_3_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
          <div id="sort-arrow_down_3_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
        </div>
        <div class="table-header-element__label">
          Phone
        </div>
      </div>
    </div>
    <% unless @clients.empty? %>
      <% @clients.each do |client| %>
        <%= link_to(admin_client_url(client), class: "custom-table__table-row-wrapper table-row-wrapper link-div table-row_0") do %>
          <div class="table-row-wrapper__information w-10">
            <%= image_tag(client.logo_url, size: "75x75") %>
          </div>
          <div class="table-row-wrapper__information">
            <%= client.label %>
          </div>
          <div class="table-row-wrapper__information">
            <%= client.email %>
          </div>
          <div class="table-row-wrapper__information">
            <%= client.phone %>
          </div>
        <% end %>
      <% end %>
      <%= paginate @clients %>
    <% else %>
      <div class="custom-table__message">Empty</div>
    <% end %>
  </div>
</div>
