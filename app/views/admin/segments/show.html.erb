<h1>Admin</h1>
<h2>Segment Info</h2>

<h3>Label</h3>
<h4><%= @segment.label %></h4>

<h3>Segment's clients</h3>
<% unless @segment_clients.empty? %>
  <% @segment_clients.each do |client| %>
    <%= link_to admin_client_url(client) do %>
      <h4><%= client.label %></h4>
    <% end %>
  <% end %>
<% else %>
  <h4>Empty</h4>
<% end %>

<h3>Segment's users</h3>
<% unless @segment_users.empty? %>
  <% @segment_users.each do |user| %>
    <%= link_to admin_user_url(client) do %>
      <h4><%= user.first_name %></h4>
      <h4><%= user.last_name %></h4>
    <% end %>
  <% end %>
<% else %>
  <h4>Empty</h4>
<% end %>
