<%= javascript_pack_tag "extra/table-behavior.js" %>

<div class="model-wrapper">
  <div class="model-wrapper__label"><%= @survey.label %></div>
  <div class="model-wrapper__model-table-wrapper model-table-wrapper">
    <div class="model-table-wrapper__label">Survey's clients</div>
    <div id="listing-table_0" class="model-table-wrapper__table custom-table">
      <div class="custom-table__table-header-wrapper table-header-wrapper">
        <div class="table-header-wrapper__table-header-element table-header-element w-10">
          <div class="table-header-element__label">
            Logo
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element ">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_1_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_1_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Label
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_2_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_2_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Email
          </div>
        </div>
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__arrows-wrapper arrows-wrapper">
            <div id="sort-arrow_up_3_table_0"><%= inline_svg_tag('up-chevron.svg', class: "svg-sorting-arrow") %></div>
            <div id="sort-arrow_down_3_table_0"><%= inline_svg_tag('down-chevron.svg', class: "svg-sorting-arrow") %></div>
          </div>
          <div class="table-header-element__label">
            Phone
          </div>
        </div>
      </div>
      <% unless @survey_clients.empty? %>
        <% @survey_clients.each do |client| %>
          <%= link_to(admin_client_url(client), class: "custom-table__table-row-wrapper table-row-wrapper link-div table-row_0") do %>
            <div class="table-row-wrapper__information w-10">
              <%= image_tag(client.logo_url, size: "75x75") %>
            </div>
            <div class="table-row-wrapper__information">
              <%= client.label %>
            </div>
            <div class="table-row-wrapper__information">
              <%= client.email %>
            </div>
            <div class="table-row-wrapper__information">
              <%= client.phone %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="custom-table__message">Empty</div>
      <% end %>
    </div>
  </div>
  <div class="object-group-wrapper">
    <div class="object-group-wrapper__label">Survey content</div>
    <% unless @survey_question_groups.empty? %>
      <% @survey_question_groups.each do |question_group| %>
        <div class="colored-group">
          <div class="object-group-wrapper__info-wrapper info-wrapper">
            <div class="info-wrapper__label">Question group:</div>
            <div class="info-wrapper__information">
              <%= question_group.label %>
            </div>
          </div>
          <div class="info-wrapper__content">
            <% unless question_group.questions.empty? %>
              <% question_group.questions.each do |question| %>
                <div class="object-group-wrapper__info-wrapper info-wrapper">
                  <div class="info-wrapper__label">Question:</div>
                  <div class="info-wrapper__information">
                    <%= question.question_type %>
                  </div>
                </div>
                <div class="model-wrapper__model-table-wrapper model-table-wrapper">
                  <div id="listing-table_0" class="model-table-wrapper__table custom-table">
                    <div class="custom-table__table-header-wrapper table-header-wrapper">
                      <div class="table-header-wrapper__table-header-element table-header-element w-10">
                        <div class="table-header-element__label">
                          Answer
                        </div>
                      </div>
                      <div class="table-header-wrapper__table-header-element table-header-element">
                        <div class="table-header-element__label">
                          User
                        </div>
                      </div>
                    </div>
                    <% unless question.answers.empty? %>
                      <% question.answers.each do |answer| %>
                        <div class="custom-table__table-row-wrapper table-row-wrapper">
                          <div class="table-row-wrapper__information">
                            <%= answer.answer_val %>
                          </div>
                          <div class="table-row-wrapper__information">
                            <%= link_to(admin_user_url(answer.user)) do %>
                              <%= "#{answer.user.first_name} #{answer.user.last_name}" %>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="custom-table__message">Empty</div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="object-group-wrapper__message">Empty</div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="object-group-wrapper__message">Empty</div>
    <% end %>
  </div>
</div>
