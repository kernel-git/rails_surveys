<%= content_tag :div, id: "segments_data", data: {segments: @segments_data} do %>
<% end %>

<%= javascript_pack_tag "admin/employers/new.js" %>
<%= javascript_pack_tag "extra/table-behavior.js" %>

<%= form_with scope: :employer, url: admin_employers_url(@employer), method: :post, class: "model-wrapper" do |employer_form| %>
  <div class="model-wrapper__label">New employer</div>
  <div class="model-wrapper__model-group">
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Logo url: </div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :logo_url %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Label:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :label %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Public email:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :public_email %></div>
      </div>
    </div>
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Address:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :address %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Phone:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :phone %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Email:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :email %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Password:</div>
        <div class="model-info-wrapper__info"><%= employer_form.password_field :password %></div>
      </div>
    </div>
  </div>
  <div class="model-wrapper__model-table-wrapper model-table-wrapper">
    <div class="model-table-wrapper__label">Companies's segments</div>
    <div id="listing-table_0" class="model-table-wrapper__table custom-table">
      <div class="custom-table__table-header-wrapper table-header-wrapper">
        <div class="table-header-wrapper__table-header-element table-header-element">
          <div class="table-header-element__label">
            Label
          </div>
        </div>
      </div>
      <div id="add-row_0" class="custom-table__table-row-wrapper table-row-wrapper link-div custom-table__message">
        <%= inline_svg_tag('plus-sign.svg', class: "svg-plus") %>
      </div>
    </div>
  </div>
  <div id="current-segments-ids" style="display: none;"></div>

  <%= employer_form.submit "Create employer" %>
  
<% end %>

<div id="modal_0" class="modal-background modal-background--hidden">
  <div class="modal-content">
    <div class="modal-content__header-wrapper">
      <div class="modal-content__header-label">Select segments</div>
      <div id="modal-close_0" class="modal-content__header-button">
        <%= inline_svg_tag('cross-sign.svg', class: "svg-cross") %>
      </div>
    </div>
    <div class="modal-content__body">
      <div id="listing-table_1" class="listing-wrapper__custom-table custom-table">
        <div class="custom-table__table-header-wrapper table-header-wrapper">
          <div class="table-header-wrapper__table-header-element table-header-element">
            <div class="table-header-element__label">
              Label
            </div>
          </div>
        </div>
        <!-- Segments data goes here -->
      </div>
    </div>
  </div>
</div>