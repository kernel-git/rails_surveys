<%= javascript_pack_tag "extra/table-behavior.js" %>

<%= form_with scope: :employer, url: admin_employers_url(@employer), method: :post, class: "model-wrapper" do |employer_form| %>
  <div class="model-wrapper__label">New employer</div>
  <div class="model-wrapper__model-group">
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Logo url: </div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :logo_url %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Name:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :label %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Public email:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :public_email %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Address:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :address %></div>
      </div>
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Phone:</div>
        <div class="model-info-wrapper__info"><%= employer_form.text_field :phone %></div>
      </div>
    </div>
    <div class="model-wrapper__model-info-block">
      <div class="model-wrapper__model-info-wrapper input-wrapper">
        <div class="model-info-wrapper__label">Moderator's nickname:</div>
        <div class="model-info-wrapper__info">
          <input type="text" name="employer[moderators_attributes[][nickname]"/>
        </div>
      </div>
        <div class="model-wrapper__model-info-wrapper input-wrapper">
          <div class="model-info-wrapper__label">Moderator's email:</div>
          <div class="model-info-wrapper__info">          
            <input type="text" name="employer[moderators_attributes[][account_attributes[email]]"/>
          </div>
        </div>
        <div class="model-wrapper__model-info-wrapper input-wrapper">
          <div class="model-info-wrapper__label">Password:</div>
          <div class="model-info-wrapper__info">
            <input type="text" name="employer[moderators_attributes[][account_attributes[password]]"/>
          </div>
        </div>
        <div class="model-wrapper__model-info-wrapper input-wrapper">
          <div class="model-info-wrapper__label">Password confirmation:</div>
          <div class="model-info-wrapper__info">
            <input type="text" name="employer[moderators_attributes[][account_attributes[password_confirmation]]"/>
          </div>
        </div>
    </div>
  </div>
  <%= employer_form.submit "Create employer" %>  
<% end %>
